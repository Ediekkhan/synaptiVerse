# SynaptiVerse Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=False
ENVIRONMENT=production

# ============================================================================
# FETCH.AI AGENT CONFIGURATION
# ============================================================================
# Agent seeds for deterministic addresses (generate unique values for production)
COORDINATOR_SEED=synaptiverse_coordinator_seed_change_in_production
ADVISOR_SEED=synaptiverse_advisor_seed_change_in_production

# Agentverse configuration
AGENTVERSE_ENABLED=False
AGENTVERSE_MAILBOX_KEY=your_agentverse_mailbox_key_here
AGENTVERSE_API_KEY=your_agentverse_api_key_here

# ============================================================================
# METTA CONFIGURATION
# ============================================================================
# Path to MeTTa knowledge base (relative to project root)
METTA_KNOWLEDGE_PATH=src/metta/knowledge_graphs/medical_facts.metta
METTA_CACHE_ENABLED=True
METTA_MAX_FACTS=1000

# ============================================================================
# API CONFIGURATION
# ============================================================================
# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000
CORS_ALLOW_CREDENTIALS=True

# Rate limiting
RATE_LIMIT_ENABLED=False
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ============================================================================
# HEALTHCARE CONFIGURATION
# ============================================================================
# Appointment scheduling
DEFAULT_APPOINTMENT_DURATION=30
TIMEZONE=UTC
EMERGENCY_NOTIFICATION_ENABLED=False
EMERGENCY_WEBHOOK_URL=

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/synaptiverse.log

# ============================================================================
# SECURITY
# ============================================================================
# Secret key for sessions (generate with: openssl rand -hex 32)
SECRET_KEY=change_this_to_a_random_secret_key_in_production

# PHI Storage (should always be False for privacy)
STORE_PHI=False
ENABLE_ANALYTICS=False

# ============================================================================
# DATABASE (Optional - currently using in-memory storage)
# ============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/synaptiverse
# DATABASE_POOL_SIZE=10

# ============================================================================
# EXTERNAL SERVICES (Future integrations)
# ============================================================================
# SMTP for notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=noreply@synaptiverse.ai

# Twilio for SMS notifications
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_FROM_NUMBER=+1234567890

# ============================================================================
# TESTING
# ============================================================================
# Test mode disables external API calls
TEST_MODE=False
MOCK_AGENTS=False
